{
    "buildOnSave": true,
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "noImplicitAny": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "allowJs": false,
        "outDir": "./dist",
        "rootDirs": [
            "./src",
            "./config"
        ],
        "baseUrl": "./",
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "custom_typings",
        "src/**/*",
        "config/**/*"
    ]
    // ],
    // "files": [
    //     "custom_typings/rethinkdbex",
    //     "custom_typings/rethinkdbdash"
    // ]
}